                                <Condition Binding="{Binding RelativeSource={x:Static RelativeSource.Self},Path=IsPressed}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="imgLeftOver"  Property="Source" Value="{Binding Source={x:Static kd:StaticImages.ImageSourceBoxNotificationDownLeft}}" />
                            <Setter TargetName="imgFillerOver"  Property="Source" Value="{Binding Source={x:Static kd:StaticImages.ImageSourceBoxNotificationDownFiller}}" />
